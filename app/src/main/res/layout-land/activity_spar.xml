<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.JudgeActivity"
    android:background="@drawable/single_fight">

    <TextView
        android:id="@+id/score_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="172dp"
        android:layout_marginBottom="263dp"
        android:layout_toStartOf="@+id/score_blue"
        android:fontFamily="@font/montserrat"
        android:text="0"
        android:textColor="#BA5250"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/score_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="232dp"
        android:layout_marginBottom="263dp"
        android:fontFamily="@font/montserrat"
        android:text="0"
        android:textColor="#51B6D6"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/txt_round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="292dp"
        android:fontFamily="@font/montserrat"
        android:text="Round: 0"
        android:textColor="#DCDCE2"
        android:textSize="20sp" />

    <Button
        android:id="@+id/plus1_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="87dp"
        android:background="@null"/>

    <Button
        android:id="@+id/plus2_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="129dp"
        android:layout_marginTop="150dp"
        android:background="@null"/>

    <Button
        android:id="@+id/plus3_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="206dp"
        android:background="@null" />

    <Button
        android:id="@+id/plus4_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="127dp"
        android:layout_marginTop="264dp"
        android:background="@null"/>

    <Button
        android:id="@+id/minus1_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="38dp"
        android:layout_marginBottom="38dp"
        android:background="@null" />

    <Button
        android:id="@+id/plus1_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="40dp"
        android:background="@null" />

    <Button
        android:id="@+id/plus2_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="146dp"
        android:layout_marginEnd="132dp"
        android:background="@null" />

    <Button
        android:id="@+id/plus3_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="211dp"
        android:layout_marginEnd="38dp"
        android:background="@null" />

    <Button
        android:id="@+id/plus4_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/minus1_blue"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="15dp"
        android:background="@null" />

    <Button
        android:id="@+id/minus1_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="38dp"
        android:background="@null" />

    <Button
        android:id="@+id/btn_start_stop"
        android:layout_width="99dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="286dp"
        android:layout_marginBottom="81dp"
        android:background="@drawable/start" />

    <TextView
        android:id="@+id/countdown_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="305dp"
        android:layout_marginBottom="260dp"
        android:fontFamily="@font/montserrat"
        android:text="2:00"
        android:textColor="#DCDCE2"
        android:textSize="30sp" />

</RelativeLayout>